<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">
    <com.sxu.smartpicture.imageloader.WrapImageView
        android:id="@+id/directory_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/directory_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="24dp"
        android:layout_toRightOf="@id/directory_icon"
        tools:text="所有图片"
        android:textSize="15sp"
        android:textColor="#333333"
        android:maxLines="1"
        android:ellipsize="end"/>
    <TextView
        android:id="@+id/photo_count_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/directory_icon"
        android:layout_alignBottom="@id/directory_icon"
        tools:text="2张"
        android:textSize="12sp"
        android:textColor="#999999"/>
    <ImageView
        android:id="@+id/check_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="gone"/>
</RelativeLayout>
